<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yilmaz.parkkontrol.view.MenuFragment">


    <ImageView
        android:id="@+id/manualImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:onClick="goToManual"
        android:scaleType="fitXY"
        android:src="@drawable/car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoImage" />

    <ImageView
        android:id="@+id/autoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="#FF9800"
        android:onClick="goToAuto"
        android:scaleType="fitXY"
        android:src="@drawable/al"
        app:layout_constraintBottom_toTopOf="@+id/manualImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>